<h1><?php echo $this->getForumModel()->getTitle() ?></h1>

<?php if ($this->getCollection()->count()  == 0) : ?>
    <div class="w3forum_itemNotFound">
        <?php echo $this->__('Your subject will be first') ?>
    </div>
<?php endif ?>

<?php foreach($this->getCollection() as $item) : ?>
    <div class="w3forum_item">
        <a class="title" href="<?php echo Mage::helper('w3site_forum')->getUrl('forum/subject/view/id/' . $item->getId()) ?>"><?php echo $item->getTitle() ?></a>
        <div class="author_name"><?php echo $item->getAuthor()->getName() ?></div>
        <div class="description restricted"><?php echo $this->helper('w3site_forum')->prepareText($item->getDescription(), 380) ?></div>
        <?php if ($item->getUpdated()) : ?>
            <div class="modified">
                <?php if ($item->getUpdated() == $item->getCreated()) : ?>
                    <?php echo $this->__('Created at') ?>: <?php echo Mage::helper('core')->formatTime($item->getUpdated(), Mage_Core_Model_Locale::FORMAT_TYPE_SHORT, true) ?>
                <?php else : ?>
                    <?php echo $this->__('Modified at') ?>: <?php echo Mage::helper('core')->formatTime($item->getUpdated(), Mage_Core_Model_Locale::FORMAT_TYPE_SHORT, true) ?>
                <?php endif ?>
            </div>
        <?php endif ?>
    </div>
<?php endforeach ?>

<div class="w3forum_pagination_wrapper">
    <?php echo $this->getChildHtml('toolbar_pager') ?>
</div>

<?php if(Mage::getSingleton('customer/session')->isLoggedIn()) : ?>
    <form class="w3forum_form" action="<?php echo Mage::helper('w3site_forum')->getUrl('forum/subject/editPost') ?>" method="post">
        <div class="forumLabel">
            <?php echo $this->__('Create your subject') ?>
        </div>
        
        <input type="hidden" name="forum_id" value="<?php echo $this->getForumId() ?>" />
        <div>
            <div>
                <?php echo $this->__('Title') ?>
            </div>
            <div>
                <input type="text" name="title" />
            </div>
        </div>
        <div>
            <div>
                <?php echo $this->__('Description') ?>
            </div>
            <div>
                <textarea name="description"></textarea>
            </div>
        </div>
        
        <div class="controlBlock">
            <div class="leftButtons">
                <a href="<?php echo Mage::helper('w3site_forum')->getUrl('forum') ?>"><?php echo $this->__('Back') ?></a>
            </div>
            
            <input type="submit" value="<?php echo $this->__('Add subject') ?>" />
        </div>
    </form>
<?php else : ?>
